<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dgray"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:singleLine="true"
        android:ellipsize="start"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:textSize="45sp"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">

        <TextView
            android:id="@+id/clean"
            style="@style/Operators_Button"
            android:text="C"
            android:layout_weight="3.05"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>

        <TextView
            android:id="@+id/division"
            style="@style/Operators_Button"
            android:text="/"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">

        <TextView
            android:id="@+id/number_seven"
            style="@style/Numbers_Button"
            android:text="7"
            android:onClick="calculate"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/number_eight"
            style="@style/Numbers_Button"
            android:text="8"
            android:onClick="calculate"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/number_nine"
            style="@style/Numbers_Button"
            android:text="9"
            android:onClick="calculate"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/multiplication"
            style="@style/Operators_Button"
            android:text="x"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">

        <TextView
            android:id="@+id/number_four"
            style="@style/Numbers_Button"
            android:text="4"
            android:onClick="calculate"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/number_five"
            style="@style/Numbers_Button"
            android:text="5"
            android:onClick="calculate"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/number_six"
            style="@style/Numbers_Button"
            android:text="6"
            android:onClick="calculate"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/subtraction"
            style="@style/Operators_Button"
            android:text="-"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">

        <TextView
            android:id="@+id/number_one"
            style="@style/Numbers_Button"
            android:text="1"
            android:onClick="calculate"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/number_two"
            style="@style/Numbers_Button"
            android:text="2"
            android:onClick="calculate"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/number_three"
            style="@style/Numbers_Button"
            android:text="3"
            android:onClick="calculate"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/addition"
            style="@style/Operators_Button"
            android:text="+"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginStart="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginEnd="1dp">

        <TextView
            android:id="@+id/dot"
            style="@style/Numbers_Button"
            android:text="."
            android:onClick="calculate"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/number_zero"
            style="@style/Numbers_Button"
            android:text="0"
            android:onClick="calculate"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>
        <ImageView
            android:id="@+id/backspace"
            style="@style/Numbers_Button"
            android:src="@drawable/backspace"
            android:scaleType="center"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/equals"
            style="@style/Operators_Button"
            android:text="="
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"/>

    </LinearLayout>

</LinearLayout>